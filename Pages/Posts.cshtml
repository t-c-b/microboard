@page
@model microboard.Pages.PostsModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Posts</title>
</head>
<body>

<form method="post">
  <div class="form-group">
    <label asp-for="post.name" class="control-label"></label>
    <input asp-for="post.name" class="form-control"/>
  </div>
  <div class="form-group">
    <label asp-for="post.body" class="control-label"></label>
    <input asp-for="post.body" class="form-control"/>
  </div>
  <div class="form-group">
    <input type="submit" value="post" class="btn btn-primary"/>
  </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Posts[0].body)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Posts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.body)
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
